            </ul>
          </li> -->
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><%= link_to 'Create Event', new_event_path, class: 'navbar-cta' %></li>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle menu-profile" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.f_name %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'My Events', dashboard_attending_path %></li>
                <li role="presentation" class="divider"></li>
                <li><%= link_to 'Hosted Events', dashboard_created_path %></li>
                <li role="presentation" class="divider"></li>
                <!-- <li><%= link_to 'Dashboard', dashboard_index_path %></li> -->
                <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign Up', new_user_registration_path, class: '' %></li>
            <li><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
  </nav>

  <% if notice %>
  <div class="container error-container">
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-success" role="alert"><p id="notice"><%= notice %></p></div>
      </div>
    </div>
  </div>
  <% end %>

  <% if alert %>
  <div class="container error-container">
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-danger" role="alert"><p id="notice"><%= alert %></p></div>
      </div>
    </div>
  </div>
  <% end %>

  <%= yield %>

  <%= render 'shared/footer' %>

</body>
