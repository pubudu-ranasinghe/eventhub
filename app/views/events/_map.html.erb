<div id="event-map-canvas" class="event-map-canvas"></div>

<script type="text/javascript">

  function initialize() {
    var location = new google.maps.LatLng(<%= @event.latitude %>, <%= @event.longitude %>);
    var mapOptions = {
      center: location,
      zoom: 15,
      scrollwheel: false,
      disableDefaultUI: true,
      zoomControl: true
    };
    var map = new google.maps.Map(document.getElementById('event-map-canvas'),
        mapOptions);
    var marker = new google.maps.Marker({
      position: location,
      map: map,
      icon: '<%= asset_path('marker.png') %>'
    });
  }
  google.maps.event.addDomListener(window, 'load', initialize);
</script>
