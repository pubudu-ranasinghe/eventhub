<%
meta description: 'Welcome to eventhub.lk! The truly Sri Lankan platform for all Sri Lankan events!',
     author: 'Eventhub',
     keywords: %w(event sri lanka colombo)
%>
<%
meta og: {
  title: "Eventhub",
  image: image_url("eventhub_cover.png"),
  url: request.original_url,
  description: "Welcome to eventhub.lk! The truly Sri Lankan platform for all Sri Lankan events!"
}
%>
<style media="screen">
  /*.header2{ background-image: url(<%= asset_path "#{rand(1..3)}.jpg" %>);}*/
</style>

<div class="header2">
  <div class="inner">
    <h1>Welcome to Eventhub</h1>
    <p>Eventhub is your guide to amazing experiences in Sri Lanka</p>
    <div class="header-btns">
      <a data-scroll class="btn btn-primary btn-cta btn-cta--red" href="#events-scroll">Explore</a>
      <%= link_to 'Create', page_path('organize'), class: 'btn btn-default btn-cta btn-cta--white' %>
    </div>
    <div class="down-arrow">
      <div class="arrow"></div>
    </div>
  </div>
</div>

<div class="container post-grid">

  <div id="events-scroll" class="row section-head">
    <div class="col-md-12 text-center">
      <h3>Upcoming Events Around You</h3>
    </div>
  </div>

  <% @events.in_groups_of(3, false).each do |group| %>
  <div class="row">

    <% group.each do |event| %>
    <div class="col-sm-6 col-md-4 card-container">
      <div class="card">

        <%= link_to '', event %>
        <!-- <div class="card-img"></div> -->
        <%= image_tag event.cover.url(:thumb) %>
        <div class="card-meta">
          <h2><%= event.title %></h2>
          <!-- <p><%= event.description %></p> -->
          <p class="date"><i class="icon ion-android-calendar"></i><%= event.start_date.strftime("%b %d") %>
          <%= print_tomo_label(event.start_date) %>
          <%= print_today_label(event.start_date, event.end_date) %>
          </p>
        </div>

      </div>
    </div>
    <% end %>

  </div>
<% end %>

  <div class="row text-center">
    <%= will_paginate %>
  </div>
<!-- <%= link_to 'New Event', new_event_path %> -->
</div>

<div class="promo-container">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-offset-1 col-md-10 inner">
        <h1>Are you organizing an awesome event?<br>Submit your event now.</h1>
        <%= link_to 'See What Eventhub Offers', page_path('organize'), class: 'btn btn-cta btn-cta--white' %>
      </div>
    </div>
  </div>
</div>

<script>
    smoothScroll.init({
      easing: 'easeInOutCubic',
      updateURL: false
    });
</script>
