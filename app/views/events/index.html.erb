<div class="row">
  <p id="notice"><%= notice %></p>
  <h1>Listing Events</h1>

  <% @events.each do |event| %>
  <div class="col-md-4">
    <h1><%= event.title %></h1>
    <%= image_tag event.cover.url(:thumb) %>
    <p><%= event.description %></p>
    <%= link_to 'More', event, class: 'btn btn-default' %>
    <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-default' %>
    <%= link_to 'Destroy', event, method: :delete, class: 'btn btn-default', data: { confirm: 'Are you sure?' } %>
  </div>
  <% end %>

</div>

